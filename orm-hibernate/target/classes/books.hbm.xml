<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- 连接好数据库之后，选择正确的Table进行关联，在这里配置映射的关系(或者自动生成) -->
<hibernate-mapping>

    <!-- HBM: mapping metadata to determine load and store objects of the persistent class -->
    <class name="com.hibernate.main.model.Book" table="t_book" schema="public">
        <id name="id" column="id">
            <generator class="increment"/> <!-- 该列的ID会随机自动地增加 -->
        </id>
        <property name="name" column="name" not-null="true" unique="true"/>
        <property name="title">
            <column name="title" sql-type="nvarchar(50)" length="50"/>
        </property>
    </class>
</hibernate-mapping>