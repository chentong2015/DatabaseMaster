<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.hibernate5.testing.component.MyOuterClass" table="t_my_outer_class">
        <id type="long" name="id" column="id"/>
        <property type="java.lang.String" name="name" column="name"/>

        <!-- TODO. component 属于一个实体内的组件
                   not an entity reference 不是一种实体引用的关系
                   不会创建Component的table数据表 -->
        <component name="component" class="com.hibernate5.testing.component.Component">
            <!-- 包含组件的全部列字段 -->
            <property type="java.lang.String" name="name" column="component_name"/>
            <property type="java.lang.Double" name="price" column="component_price"/>
        </component>
    </class>
</hibernate-mapping>