<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.hibernate5.testing.metadata.entity.BaseMetadata"
           entity-name="com.hibernate5.testing.metadata.entity.BaseMetadata"
           table="t_metadata">
        <id type="long" name="id" column="id"/>
        <property type="java.lang.String" name="name" column="name"/>
    </class>
</hibernate-mapping>