<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <!-- schema="public" for psql
         schema="dbo" for sql server -->
    <class name="com.hibernate5.main.entity.Book" schema="dbo" table="t_book">
        <id name="id" column="id">
            <generator class="increment"/> <!-- 该列的ID会随机自动地增加 -->
        </id>
        <property name="name" column="name" not-null="true" unique="true"/>
        <property name="title">
            <column name="title" sql-type="nvarchar(50)" length="50"/>
        </property>
    </class>
</hibernate-mapping>