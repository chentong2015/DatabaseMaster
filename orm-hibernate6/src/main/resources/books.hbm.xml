<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- HBM: mapping metadata to determine load and store objects of the persistent class
         TODO. 不同的数据库，注意使用schema的区别: 这个schema的名称可以写在@Table注解的类型上
         schema="public" for psql
         schema="dbo" for sql server -->
<hibernate-mapping>
    <class name="com.hibernate6.main.entity.Book" schema="public" table="t_book">
        <id name="id" column="id">
            <generator class="increment"/> <!-- 该列的ID会随机自动地增加 -->
        </id>
        <property name="name" column="name" not-null="true" unique="true"/>
        <property name="title">
            <!-- TODO. 映射到数据库的列，名称+数据库中列支持的特定类型 -->
            <column name="title" sql-type="nvarchar(50)" length="50"/>
        </property>
    </class>
</hibernate-mapping>