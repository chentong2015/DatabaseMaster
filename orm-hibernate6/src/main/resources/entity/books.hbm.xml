<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- HBM: mapping metadata to determine load and store objects of the persistent class
         TODO. 不同的数据库，注意使用schema的区别: 这个schema的名称可以写在@Table注解的类型上
         schema="public" for psql
         schema="dbo" for sql server -->
<hibernate-mapping>
    <class name="com.hibernate6.main.entity.Book" schema="public" table="t_book">
        <!-- TODO. hibernate映射java type数据类型到sql-type数据库中的数据类型 -->
        <id type="long" name="id">
            <column name="id" sql-type="bigint"/> <!-- 指定列的信息和约束条件(存在适配的问题) -->
            <generator class="increment"/> <!-- 该列的ID会随机自动地增加 -->
        </id>
        <property type="string" name="name">
            <column sql-type="character varying(32)" name="name" not-null="true" unique="true"/>
        </property>
        <property name="title">
            <column name="title" sql-type="nvarchar(50)" length="50"/>
        </property>
    </class>
</hibernate-mapping>