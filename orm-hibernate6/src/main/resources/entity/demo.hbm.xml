<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <!-- TODO. FQCN: fully-qualified class names -->
    <class name="com.hibernate6.main.entity.EntityDemo" entity-name="mt_demo_table">
        <!-- TODO. 指定的类型必须提供指定字段的getter & setter方法 -->
        <id name="id" column="id">
            <generator class="increment"/> <!-- 该列的ID会随机自动地增加 -->
        </id>

        <!-- 设置ID的生成器
        <id type="double" name="reference" column="M_REFERENCE">
           <generator class="native"></generator>
        </id> -->

        <!-- 联合ID
        <composite-id name="id" class="CompositeIdId">
            <key-property type="string" name="label" column="M_LABEL"/>
            <key-property type="int" name="type" column="M_TYPE"/>
        </composite-id> -->

        <!-- 非空唯一约束构成了成员主键 -->
        <property name="name" column="name" not-null="true" unique="true"/>
    </class>
</hibernate-mapping>