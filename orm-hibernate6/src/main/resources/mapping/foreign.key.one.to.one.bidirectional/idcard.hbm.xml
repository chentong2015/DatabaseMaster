<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="hibernate.framework.apis.mapping.foreign.key.one.to.one.bidirectional">
    <class name="IdCard" schema="public" table="t_fk_idcard2">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="code" column="code"/>

        <!-- TODO. 设置双向一对一的关系
             property-ref="idCard" 设置的是Person类型下的属性名称 -->
        <one-to-one name="person"
                    class="Person"
                    cascade="save-update"
                    property-ref="idCard"/>
    </class>
</hibernate-mapping>