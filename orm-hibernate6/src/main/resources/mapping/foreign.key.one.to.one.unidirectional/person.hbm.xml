<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="hibernate.framework.apis.mapping.foreign.key.one.to.one.unidirectional">
    <class name="Person" schema="public" table="t_fk_person">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="name" column="name"/>
        <property name="age" column="age"/>

        <!-- unique="true" 基于外键的单向一对一的关系 -->
        <many-to-one name="idCard"
                     class="IdCard"
                     column="card_id"
                     unique="true"
                     foreign-key="person_id_card"/>

        <!-- one-to-one没有办法实现外键的一对一关联
        <one-to-one name="idCard" class="IdCard" cascade="save-update" foreign-key="person_id_card"/> -->
    </class>
</hibernate-mapping>