<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="hibernate.framework.apis.mapping.unidirectional.many.to.one">
    <class name="Student" schema="public" table="t_student">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="name" column="name"/>
        <property name="age" column="age"/>

        <!-- TODO. 使用特定的多对一的标签
             name: 对应的字段名称
             class: 映射关系的类型(必须使用类型的全路径)
             column: 自定义的外键列名 -->
        <many-to-one name="grade" class="Grade" column="grade_id" not-null="true"/>
    </class>
</hibernate-mapping>