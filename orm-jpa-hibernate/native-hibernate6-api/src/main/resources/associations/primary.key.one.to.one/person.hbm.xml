<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="hibernate.framework.apis.associations.primary.key.one.to.one">
    <class name="Person" schema="public" table="t_fk_person3">
        <!-- TODO. 基于主键的One-to-One的配置，引用属性对应类型的主键作为关联 -->
        <id name="id" column="id">
            <generator class="foreign">
                <param name="property">idCard</param>
            </generator>
        </id>
        <property name="name" column="name"/>
        <property name="age" column="age"/>

        <!-- constrained="true" 设置约束，表示基于IdCard的主键构成One-To-One的关系 -->
        <one-to-one name="idCard" class="IdCard" cascade="save-update" constrained="true"/>
    </class>
</hibernate-mapping>