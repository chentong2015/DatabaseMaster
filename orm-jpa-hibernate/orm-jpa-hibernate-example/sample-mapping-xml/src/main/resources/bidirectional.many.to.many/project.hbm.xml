<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="bidirectional.many.to.many.Project" table="t_xml_project">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <property name="name" column="name"/>

        <set name="employees" table="t_xml_employee_projects" inverse="true">
            <key column="key_project"/>
            <many-to-many class="bidirectional.many.to.many.Employee" column="key_employee"/>
        </set>
    </class>
</hibernate-mapping>