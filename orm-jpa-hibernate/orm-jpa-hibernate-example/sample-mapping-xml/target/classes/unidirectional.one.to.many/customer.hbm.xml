<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="unidirectional.one.to.many.Customer" table="t_xml_customer">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <property name="name" column="name"/>
        <set name="orders" fetch="join" lazy="false">
            <key column="customer_id" foreign-key="foreign_key"/>
            <one-to-many class="unidirectional.one.to.many.Order"/>
        </set>
    </class>
</hibernate-mapping>