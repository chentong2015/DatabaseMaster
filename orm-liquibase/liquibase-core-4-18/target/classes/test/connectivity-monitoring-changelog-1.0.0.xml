                </not>
            </and>
        </preConditions>
        <addColumn tableName="C2_MONITORING_RUNS">
            <column name="BPM_VERSION" type="varchar(100)" defaultValue=" "/>
        </addColumn>
    </changeSet>

    <changeSet id="add-pid-to-runs" author="murex.connectivity">
        <preConditions onError="HALT" onFail="MARK_RAN">
