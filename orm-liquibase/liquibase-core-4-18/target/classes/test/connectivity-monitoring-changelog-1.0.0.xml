                <sqlCheck expectedResult="1">
                    SELECT count(*) FROM USER_CONSTRAINTS WHERE CONSTRAINT_NAME='CHK_MONITORING_MODE_VALUES'
                </sqlCheck>
            </and>
        </preConditions>
        <sql>
            alter table C2_MONITORING_RUNS
