<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd">

    <!-- Data model creation from scratch is usually the first migration script that should be executed -->

    <changeSet id="1" author="nono">
        <createTable tableName="JFT_SAMPLES">
            <column name="ID" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="LABEL" type="string(255)">
                <constraints nullable="false"/>
            </column>
            <column name="VALUE" type="double">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>


    <changeSet author="marketrisk-sourcemanager" id="createViewWithAllRunTemplateIds">
        <preConditions onFail="MARK_RAN">
            <not>
                <viewExists viewName="comedies"/>
            </not>
        </preConditions>
        <createView viewName="comedies">
            SELECT *
            FROM JFT_SAMPLES
        </createView>
    </changeSet>

</databaseChangeLog>