<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd">

    <changeSet id="1" author="nono">
        <createTable tableName="JFT_SAMPLES">
            <column name="M_NUMBER" type="integer"/>
            <column name="M_NUMBER2" type="integer"/>
        </createTable>
        <!-- columnDataType is required for MS SQL Server -->
        <addNotNullConstraint columnName="M_NUMBER2" tableName="JFT_SAMPLES" columnDataType="integer"/>

    </changeSet>

    <changeSet id="2" author="nono">
        <preConditions onFail="MARK_RAN">
            <ext:isNullable tableName="JFT_SAMPLES" columnName="M_NUMBER2"/>
        </preConditions>
        <dropColumn tableName="JFT_SAMPLES" columnName="M_NUMBER"/>
    </changeSet>
</databaseChangeLog> 