<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 定义映射器所在的特定的名称空间 -->
<mapper namespace="mybatis_basics.testConfigXml.BlogMapper">

    <!-- 返回的类型必须能够通过完整的package路径找到 -->
    <select id="selectBlog" resultType="mybatis_basics.DataModel.Blog">
        select * from blog where id = #{id}
        <!-- #{id} 类似于创建一个预处理语句PreparedStatement参数
        String selectPerson = "SELECT * FROM PERSON WHERE ID=?";
        PreparedStatement ps = conn.prepareStatement(selectPerson); -->
    </select>

    <!-- resultMap – 描述如何从数据库结果集中加载对象
         可以提供一个结果的映射map, 将查询出来的信息映射到User对象
    <resultMap type="org.apache.ibatis.submitted.rounding.User" id="usermap">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="funkyNumber" property="funkyNumber"/>
        <result column="roundingMode" property="roundingMode"/>
    </resultMap>
    <select id="getUser" resultMap="usermap">  这里必须使用resultMap, 而不是resultType
        select * from users
    </select> -->
</mapper>

